<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 红色背景 -->
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/transparent"/>

            <stroke
                android:width="1dp"
                android:color="#FF2587"/>

            <size android:width="14.4dp"
                  android:height="14.4dp"/>
        </shape>
    </item>
    <!-- 白色背景 -->
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/avendeblack"/>

            <size android:width="9.6dp"
                  android:height="9.6dp"/>
        </shape>
    </item>
</layer-list>